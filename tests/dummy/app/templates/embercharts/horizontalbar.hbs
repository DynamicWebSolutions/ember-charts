<div class="col-md-10 col-md-offset-2 left-border main-content-container">
  <div class="chart-header">
    <h2>Horizontal Bar Chart</h2>
  </div>

  <div class="example-container">
    <div class="chart-container">
      {{!horizontal-bar-chart
        minBarThickness=minBarThickness
        maxBarThickness=maxBarThickness
        selectedSeedColor=selectedSeedColor
        data=data
        selectedSortType=selectedSortType
      }}
      {{chart-horizontalbar
        minBarThickness=minBarThickness
        maxBarThickness=maxBarThickness
        selectedSeedColor=selectedSeedColor
        data=data
        selectedSortType=selectedSortType
      }}      
    </div>
  </div>

  <div class="row bumper-30">
    <div class="col-md-6">
      <h4>Ember Bindings</h4>

      <div class="form-horizontal">
        <div class="form-group">
          <label class="col-lg-4 control-label">Data</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedData) value="target.value"}}>
              {{#each availableDataSets key="@index" as |item|}}
                <option selected={{is-equal item selectedData}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>          
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Sorting</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedSortType) value="target.value"}}>
              {{#each sortTypes key="@index" as |item|}}
                <option selected={{is-equal item selectedSortType}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>            
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Color</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedSeedColorName) value="target.value"}}>
              {{#each seedColorNames key="@index" as |item|}}
                <option selected={{is-equal item selectedSeedColorName}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>            
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Min Bar Thickness</label>
          <div class="col-lg-8">
            {{ui-slider
              value=minBarThickness
              min=20
              max=200
              step=10
              action="minBarThickness"
            }}          
            <span class="help-block">Min Thickness: {{minBarThickness}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Max Bar Thickness</label>
          <div class="col-lg-8">
            {{ui-slider
              value=maxBarThickness
              min=20
              max=200
              step=10
              action="maxBarThickness"
            }}             
            {{!view App.ScrubberComponent min=20 max=200 step=10 valueBinding="maxBarThickness"}}
            <span class="help-block">Max Thickness: {{maxBarThickness}}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <h4>JSON Data</h4>
      <div class="chart-json">
<pre>{{prettyPrintedData}}</pre>
      </div>
    </div>
  </div>
</div>
