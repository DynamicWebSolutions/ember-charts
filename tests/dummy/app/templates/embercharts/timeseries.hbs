<div class="col-md-10 col-md-offset-2 left-border main-content-container">
  <div class="chart-header">
    <h2>Time Series Chart</h2>
  </div>

  <div class="example-container">
    <div class="chart-container">
      {{chart-timeseries
        lineData=lineData
        selectedInterval=selectedInterval
        selectedSeedColor=selectedSeedColor
        yAxisFromZero=yAxisFromZero
        barData=barData
        barPadding=barPadding
        barGroupPadding=barGroupPadding
        barLeftOffset=barLeftOffset        
      }}
    </div>
  </div>

  <div class="row bumper-30">
    <div class="col-md-6">
      <h4>Ember Bindings</h4>

      <div class="form-horizontal">
        <div class="form-group">
          <label class="col-lg-4 control-label">Line Data</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedLineData) value="target.value"}}>
              {{#each availableLineDataSets key="@index" as |item|}}
                <option selected={{is-equal item selectedLineData}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Data</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedBarData) value="target.value"}}>
              {{#each availableBarDataSets key="@index" as |item|}}
                <option selected={{is-equal item selectedBarData}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Color</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedSeedColorName) value="target.value"}}>
              {{#each seedColorNames key="@index" as |item|}}
                <option selected={{is-equal item selectedSeedColorName}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Tick Interval</label>
          <div class="col-lg-8">
            <select class="form-control" onchange={{action (mut selectedInterval) value="target.value"}}>
              {{#each tickIntervals key="@index" as |item|}}
                <option selected={{is-equal item selectedInterval}} value={{item}}>{{item}}</option>
              {{/each}}
            </select>          
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Padding</label>
          <div class="col-lg-8">
            {{ui-slider
              value=barPadding
              min=0
              max=1
              step=0.05
              action="barPadding"
            }}
            <span class="help-block">Bar Padding: {{barPadding}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Group Padding</label>
          <div class="col-lg-8">
            {{ui-slider
              value=barGroupPadding
              min=0
              max=1
              step=0.05
              action="barGroupPadding"
            }}          
            <span class="help-block">Bar Group Padding: {{barGroupPadding}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Left Offset</label>
          <div class="col-lg-8">
            {{ui-slider
              value=barLeftOffset
              min=0
              max=1
              step=0.05
              action="barLeftOffset"
            }}           
            <span class="help-block">Bar Left Offset: {{barLeftOffset}}</span>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
            <div class="checkbox">
              <label>{{view Ember.Checkbox checkedBinding="yAxisFromZero"}} Force Y-Axis From Zero</label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <h4>JSON Data</h4>
      <div class="chart-json">
<pre>{{prettyPrintedData}}</pre>
      </div>
    </div>
  </div>
</div>
